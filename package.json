{
  "name": "spectrum-ui",
  "description": "another spectrum implementation unofficial inspired by adobe spectrum",
  "private": true,
  "workspaces": [
    "alias/*",
    "react-components",
    "packages/*",
    "components/*",
    "templates/*",
    "site"
  ],
  "scripts": {
    "start": "cd site && npm run start",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --parallel",
    "test:type": "lerna run test:type --stream",
    "test": "lerna run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yeliex/spectrum-ui.git"
  },
  "keywords": [
    "spectrum",
    "react",
    "react-ui-components"
  ],
  "author": "yeliex <yeliex@yeliex.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/yeliex/spectrum-ui/issues"
  },
  "homepage": "https://github.com/yeliex/spectrum-ui#readme",
  "devDependencies": {
    "@types/node": "^17.0.34",
    "debug": "^4.3.4",
    "glob": "^7.1.6",
    "husky": "^4.3.8",
    "lerna": "^4.0.0",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test"
    }
  }
}
